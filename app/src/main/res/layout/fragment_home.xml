<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorMain"
    tools:context=".HomeFragment">

    <RelativeLayout
        android:layout_weight="1"
        android:padding="10dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/hub_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:textSize="22sp"
            android:text="@string/app_welcome"
            android:textColor="@color/colorWhite"
            android:gravity="center"
            />
        <TextView
            android:id="@+id/recommendTxt"
            android:textColor="@color/colorWhite"
            android:text="@string/app_recommend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/hub_txt"/>

    <RelativeLayout
        android:layout_below="@+id/recommendTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <com.synnapps.carouselview.CarouselView
            android:layout_marginTop="20dp"
            android:id="@+id/carouselView"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            app:fillColor="@color/colorOrange"
            app:autoPlay="false"
            app:pageColor="#00000000"
            app:radius="6dp"
            app:slideInterval="3000"
            app:strokeColor="#FF777777"
            app:strokeWidth="1dp"/>


    </RelativeLayout>

        <!--<RelativeLayout
            android:id="@+id/news_view1"

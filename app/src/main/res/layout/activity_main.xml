<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <ImageView
        android:layout_width="117dp"
        android:layout_height="100dp" app:srcCompat="@drawable/ow"
        android:id="@+id/ow"
        android:layout_marginBottom="64dp"
        app:layout_constraintBottom_toTopOf="@+id/dota2" app:layout_constraintEnd_toStartOf="@+id/csgo"
        android:layout_marginEnd="10dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="190dp"
        app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="50dp"/>

    <ImageView
        android:layout_width="129dp"
        android:layout_height="107dp" app:srcCompat="@drawable/csgo"
        android:id="@+id/csgo"
        android:layout_marginBottom="64dp"
        app:layout_constraintBottom_toTopOf="@+id/lol" app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="184dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="50dp"
        app:layout_constraintStart_toEndOf="@+id/ow" android:layout_marginStart="10dp"/>

    <ImageView
        android:layout_width="133dp"
        android:layout_height="107dp" app:srcCompat="@drawable/lol"
        android:id="@+id/lol"
        app:layout_constraintStart_toEndOf="@+id/dota2"
        android:layout_marginStart="10dp" android:layout_marginTop="64dp"
        app:layout_constraintTop_toBottomOf="@+id/csgo" app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="213dp" app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="50dp"/>

    <ImageView
        android:layout_width="117dp"
        android:layout_height="114dp"
        app:srcCompat="@drawable/dota2"
        android:id="@+id/dota2"
        android:layout_marginTop="65dp"
        app:layout_constraintTop_toBottomOf="@+id/ow" app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/lol"
        android:layout_marginEnd="10dp" android:layout_marginBottom="206dp"
        app:layout_constraintBottom_toBottomOf="parent" android:layout_marginStart="50dp"/>


</android.support.constraint.ConstraintLayout>